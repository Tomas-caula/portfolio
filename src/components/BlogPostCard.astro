---
interface Props {
    title: string;
    date: string;
    description: string;
    tags: string[];
    slug: string;
    readTime: string;
}

const { title, date, description, tags, slug, readTime } = Astro.props;

// Format date to a more readable format
const formattedDate = new Date(date).toLocaleDateString('es-ES', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<article class="blog-card">
    <div class="card-header">
        <time class="date">{formattedDate}</time>
        <span class="read-time">{readTime} lectura</span>
    </div>

    <div class="card-content">
        <h2 class="title">{title}</h2>
        <p class="description">{description}</p>
    </div>

    <div class="card-footer">
        <ul class="tags-list">
            {tags.map((tag) => (
                <li class="tag">{tag}</li>
            ))}
        </ul>

        <a href={`/blog/${slug}`} class="read-more">
            Leer m√°s
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
        </a>
    </div>
</article>

<style>
    .blog-card {
        background-color: #07080B;
        border-radius: 12px;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(189, 255, 0, 0.1);
        position: relative;
        overflow: hidden;
    }

    .blog-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
            135deg,
            rgba(189, 255, 0, 0.05) 0%,
            rgba(0, 119, 190, 0.05) 100%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 0;
    }

    .blog-card:hover::before {
        opacity: 1;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(189, 255, 0, 0.2);
        border-color: rgba(189, 255, 0, 0.3);
    }

    .card-header,
    .card-content,
    .card-footer {
        position: relative;
        z-index: 1;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        color: #888;
    }

    .date {
        color: #888;
    }

    .read-time {
        color: #78a200;
        font-weight: 600;
    }

    .card-content {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .title {
        font-size: 1.5rem;
        color: var(--button-color);
        margin: 0;
        line-height: 1.3;
    }

    .description {
        font-size: 1rem;
        line-height: 1.6;
        color: #ccc;
        margin: 0;
    }

    .card-footer {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .tags-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        padding: 0;
        list-style-type: none;
        margin: 0;
    }

    .tag {
        padding: 0.3rem 0.8rem;
        border-radius: 12px;
        font-size: 0.85rem;
        border: 1px solid var(--button-color);
        color: var(--button-color);
        background-color: rgba(120, 162, 0, 0.2);
        position: relative;
        overflow: hidden;
    }

    .tag::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -100%;
        width: 50%;
        height: 200%;
        background: linear-gradient(
            to right,
            rgba(255, 255, 255, 0) 0%,
            rgba(255, 255, 255, 0.3) 50%,
            rgba(255, 255, 255, 0) 100%
        );
        transform: rotate(25deg);
        transition: left 0.6s ease-in;
    }

    .tag:hover::before {
        left: 150%;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--button-color);
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        align-self: flex-start;
    }

    .read-more:hover {
        gap: 0.75rem;
        color: #78a200;
    }

    .read-more svg {
        transition: transform 0.3s ease;
    }

    .read-more:hover svg {
        transform: translateX(3px);
    }

    @media (min-width: 768px) {
        .blog-card {
            padding: 2.5rem;
        }

        .title {
            font-size: 1.75rem;
        }

        .description {
            font-size: 1.1rem;
        }

        .card-footer {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
    }

    @media (min-width: 1024px) {
        .title {
            font-size: 2rem;
        }
    }
</style>

---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import BlogPostCard from "../components/BlogPostCard.astro";

// Sample blog posts - replace with your actual blog posts or fetch from a CMS
const blogPosts: any[] = [];
---

<Layout title="Blog - Tomas Caula">
  <Navbar />
  <div class="blog-page">
    <div class="big-light"></div>
    <div class="blog-content">
      <div class="blog-header">
        <h1 class="blog-title">Blog</h1>
        <div class="blog-subline"></div>
        <p class="blog-subtitle">
          Pensamientos sobre desarrollo, tecnología y experiencias
        </p>
      </div>

      {
        blogPosts.length === 0 ? (
          <div class="empty-state">
            <p class="empty-message">No hay publicaciones todavía.</p>
            <p class="empty-submessage">
              Vuelve pronto para ver nuevo contenido.
            </p>
          </div>
        ) : (
          <div class="blog-grid">
            {blogPosts.map((post) => (
              <BlogPostCard
                title={post.title}
                date={post.date}
                description={post.description}
                tags={post.tags}
                slug={post.slug}
                readTime={post.readTime}
              />
            ))}
          </div>
        )
      }
    </div>
  </div>
</Layout>

<style>
  .blog-page {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    background-color: #171c27;
    color: white;
    position: relative;
    overflow-y: auto;
    box-sizing: border-box;
  }

  .blog-content {
    width: 100%;
    padding: 100px 5vw 2rem;
    text-align: left;
    z-index: 1;
    box-sizing: border-box;
  }

  .blog-header {
    margin-bottom: 3rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .blog-subline {
    width: 60px;
    height: 2px;
    background-color: #78a200;
    margin-bottom: 1rem;
  }

  .blog-subtitle {
    font-size: 1.1rem;
    color: #888;
    margin: 0;
    font-weight: 300;
  }

  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 1200px;
    padding-bottom: 2rem;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .empty-message {
    font-size: 1.5rem;
    color: #888;
    margin-bottom: 0.5rem;
    font-weight: 400;
  }

  .empty-submessage {
    font-size: 1rem;
    color: #666;
    font-weight: 300;
  }

  .big-light {
    position: absolute;
    top: 20%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(0, 119, 190, 0.15) 0%,
      transparent 70%
    );
    filter: blur(100px);
    z-index: 0;
  }

  @media (min-width: 768px) {
    .blog-content {
      padding: 3rem 10vw;
    }

    .blog-title {
      font-size: 3rem;
    }

    .blog-subtitle {
      font-size: 1.2rem;
    }

    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-content {
      padding: 4rem 15vw;
    }

    .blog-title {
      font-size: 3.5rem;
    }
  }
</style>

<style>
  .name {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
    text-align: center;
    font-family: "Poppins", sans-serif;
    letter-spacing: 0.1em;
    color: white;
  }
  .me {
    color: white;
    background-image: url(../assets/GridDetails.png);
    background-repeat: no-repeat;
    background-attachment: fixed;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: cover;
    height: calc(100vh - 200px);
    width: 100%;
  }

  .me .me-text h1,
  .me .me-text h2,
  .me .me-text p {
    color: white;
  }

  .me {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.6vw;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .me-card {
    width: 80%;
    padding: 1.2rem;
    background-color: #171b27;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    gap: 1rem;
  }

  .me-card img {
    width: 300px;
    height: 300px;
    aspect-ratio: 1/1;
    object-fit: cover;
  }

  .me-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }

  .hand {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-direction: column;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0;
  }

  h2 {
    font-size: 1.3rem;
    margin: 0;
  }

  p {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (min-width: 768px) {
    .me {
      grid-template-columns: 1fr 1fr;
    }

    .me-card {
      width: 22vw;
    }

    .me-text {
      text-align: left;
    }

    .hand {
      align-items: flex-start;
    }

    h1 {
      font-size: 3rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    p {
      font-size: 1.1rem;
      line-height: 1.6;
    }
  }

  .download-cv {
    display: inline-block;
    padding: 0.75rem 1.25rem;
    color: var(--button-color);
    font-size: 1rem;
    letter-spacing: 0.15rem;
    text-decoration: none;
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
    z-index: 1;
    border: 1px solid var(--button-color);
  }

  .download-cv::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-color: var(--button-color);
    border-style: solid;
    border-width: 0px;
    z-index: -2;
  }

  .download-cv::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0%;
    height: 100%;
    background-color: color-mix(in srgb, var(--button-color) 85%, black);
    transition: all 0.3s;
    z-index: -1;
  }

  .download-cv:hover {
    color: #171c27;
  }

  .download-cv:hover::before {
    width: 100%;
  }

  .social svg path {
    fill: white; /* Change this to your desired color */
    width: 5px; /* Adjust size as needed */
    height: 5px;
  }
  .social a {
    display: inline-block;
    transition: transform 0.3s ease-in-out;
  }

  .social a:hover {
    animation: wiggle 0.5s ease-in-out;
  }
</style>

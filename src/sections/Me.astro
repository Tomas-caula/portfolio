---
import me from "./../assets/me.jpeg";
import github from "./../icons/GitHub.svg";
import linkedin from "./../icons/Linkedin.svg";
import x from "./../icons/Twitter.svg";
import zeros from "../assets/zeros.png";
// Eliminamos la importación de la flecha de baja calidad
// import arrow from "../assets/Arrowe.png";
---

<style>
  @media (max-width: 1024px) {
    .main-padding {
      padding: 2rem !important;
    }
    .scale-110 {
      transform: none !important;
    }
  }
  @media (max-width: 768px) {
    .main-padding {
      padding: 1rem !important;
    }
    .presentacion-section {
      flex-direction: column !important;
      align-items: center !important;
      gap: 1.5rem;
    }
    .img-personal {
      margin-left: 0 !important;
      margin-bottom: 1.5rem !important;
      width: 8rem !important;
      height: 8rem !important;
    }
    .social-icon {
      width: 3.5rem !important;
      height: 3.5rem !important;
    }
    .social-div {
      width: 5.5rem !important;
      height: 2.5rem !important;
    }
    .blog-exp-section {
      flex-direction: column !important;
      height: auto !important;
    }
    .zeros-section {
      width: 100% !important;
      min-width: 0 !important;
      margin-bottom: 1rem;
      height: 7rem !important;
      padding: 1rem !important;
    }
    .blog-exp-col {
      width: 100% !important;
      gap: 1rem !important;
    }
    .blog-exp-card {
      height: 4.5rem !important;
      padding: 1rem !important;
    }
    .blog-exp-title {
      font-size: 1.3rem !important;
    }
  }
  @media (max-width: 480px) {
    .main-padding {
      padding: 0.5rem !important;
    }
    .img-personal {
      width: 5.5rem !important;
      height: 5.5rem !important;
    }
    .blog-exp-card {
      height: 3.2rem !important;
      padding: 0.7rem !important;
    }
    .blog-exp-title {
      font-size: 1rem !important;
    }
    .zeros-section img {
      max-width: 3.5rem !important;
      max-height: 3.5rem !important;
    }
  }
</style>

<!-- Contenedor principal centrado y más grande -->
<div
  class="min-h-screen flex items-center justify-center"
  style="background: transparent; color: #FFF;"
>
  <div
    class="max-w-7xl w-full mx-auto main-padding p-16 grid grid-cols-1 md:grid-cols-5 gap-4 scale-110"
    style="color: #FFF;"
  >
    <!-- Card de presentación -->
    <section
      class="p-6 rounded-2xl flex flex-col md:flex-row items-center justify-between col-span-1 md:col-span-5 presentacion-section"
      style="background-color: #07080B; color: #FFF;"
    >
      <!-- Información de presentación -->
      <div class="flex-1 order-2 md:order-1 w-full">
        <h2 class="text-gray-400 text-lg">Bienvenido</h2>
        <p class="mt-4 text-2xl" style="color: #FFF;">
          Hola, soy <span class="font-semibold" style="color: #FFF;">Tomas</span
          >, un full stack developer especializado en <span
            class="text-white"
            style="color: #FFF;">Front-end</span
          >.
        </p>
        <p class="mt-4 text-lg" style="color: #FFF;">
          Desde hace 3 años me adentro en las tecnologías buscando aprender y
          crear automatizaciones y aplicaciones que satisfagan usuarios.
        </p>

        <!-- Redes sociales -->
        <div class="flex gap-6 mt-6 flex-wrap">
          <a href="#" class="hover:text-white" style="color: #FFF;">
            <div
              class="w-28 h-16 flex items-center justify-center bg-black/70 backdrop-blur-md rounded-xl border border-white/20 shadow-lg transition-all duration-200 social-div"
            >
              <i class="fab fa-github text-white text-4xl absolute"></i>
              <img
                src={github.src}
                alt="GitHub"
                class="w-14 h-14 relative z-10 social-icon"
              />
            </div>
          </a>
          <a href="#" class="hover:text-white" style="color: #FFF;">
            <div
              class="w-28 h-16 flex items-center justify-center bg-black/70 backdrop-blur-md rounded-xl border border-white/20 shadow-lg transition-all duration-200 social-div"
            >
              <i class="fab fa-linkedin-in text-white text-4xl absolute"></i>
              <img
                src={linkedin.src}
                alt="LinkedIn"
                class="w-14 h-14 relative z-10 social-icon"
              />
            </div>
          </a>
          <a href="#" class="hover:text-white" style="color: #FFF;">
            <div
              class="w-28 h-16 flex items-center justify-center bg-black/70 backdrop-blur-md rounded-xl border border-white/20 shadow-lg transition-all duration-200 social-div"
            >
              <i class="fab fa-x-twitter text-white text-4xl absolute"></i>
              <img
                src={x.src}
                alt="Twitter/X"
                class="w-14 h-14 relative z-10 social-icon"
              />
            </div>
          </a>
        </div>
      </div>
      <!-- Imagen personal -->
      <div class="flex-shrink-0 mb-6 md:mb-0 md:ml-10 order-1 md:order-2">
        <img
          src={me.src}
          alt="Foto de Tomas"
          class="w-48 h-48 object-cover shadow-2xl rounded-full img-personal"
        />
      </div>
    </section>

    <!-- Sección Blog y Experiencia (suma de heights igual a zeros) y zeros en la misma fila -->
    <div
      class="col-span-1 md:col-span-5 flex flex-col md:flex-row gap-4 blog-exp-section"
      style="height: 240px;"
    >
      <!-- Sección zeros (ocupa 3/5 columnas en desktop, 100% en mobile) -->
      <section
        class="md:col-span-3 flex items-center justify-center rounded-2xl w-full md:w-3/5 h-full zeros-section"
        style="background-color: #07080B; height: 100%; min-height: 0; padding: 1.5rem;"
      >
        <img
          src={zeros.src}
          alt="Logo de zeros"
          class="object-contain"
          style="width: 60%; height: 80%; max-width: 6rem; max-height: 6rem;"
        />
      </section>

      <!-- Sección Blog y Experiencia (ocupa 2/5 columnas en desktop, 100% en mobile) -->
      <div class="flex flex-col gap-4 w-full md:w-2/5 h-full blog-exp-col">
        <section
          class="p-6 rounded-2xl flex items-center justify-between blog-exp-card"
          style="background-color: #07080B; color: #FFF; height: 50%; min-height: 0;"
        >
          <span class="text-3xl blog-exp-title" style="color: #FFF;">Blog</span>
          <a
            href="#"
            class="text-white text-3xl"
            aria-label="Ir al blog"
            style="color: #FFF;"
          >
            <!-- Flecha SVG de alta calidad, blanca, palito más largo, rotada 45° hacia arriba -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="36"
              height="36"
              fill="none"
              viewBox="0 0 36 36"
              class="inline-block align-middle"
              style="transform: rotate(-45deg);"
            >
              <path
                d="M6 18h20M20 28l8-10-8-10"
                stroke="#FFF"
                stroke-width="2.8"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </section>
        <section
          class="p-6 rounded-2xl flex items-center justify-between blog-exp-card"
          style="background-color: #07080B; color: #FFF; height: 112px; min-height: 0;"
        >
          <span class="text-3xl blog-exp-title" style="color: #FFF;"
            >Experiencia</span
          >
          <a
            href="#"
            class="text-white text-3xl"
            aria-label="Ver experiencia"
            style="color: #FFF;"
          >
            <!-- Flecha SVG de alta calidad, blanca, palito más largo, rotada 45° hacia arriba -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="36"
              height="36"
              fill="none"
              viewBox="0 0 36 36"
              class="inline-block align-middle"
              style="transform: rotate(-45deg);"
            >
              <path
                d="M6 18h20M20 28l8-10-8-10"
                stroke="#FFF"
                stroke-width="2.8"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </section>
      </div>
    </div>
  </div>
</div>

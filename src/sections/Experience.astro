---
import Layout from "../layouts/Layout.astro";
import ExperienceComponent from "../components/ExperienceComponent.astro";
---

<div class="experience" id="experience">
  <div class="big-light"></div>
  <div class="experience-content">
    <div class="experience-header">
      <h2 class="experience-title">Experience</h2>
      <div class="experience-subline"></div>
    </div>
    <ExperienceComponent
      fechas="sep 2023 - present"
      role="Front-end | Mobile developer · Palcare"
      description="Soy Front-end Developer y Mobile Developer en una empresa multinacional del sector salud. Me especializo en el desarrollo de aplicaciones web y móviles con React y React Native, creando experiencias intuitivas y optimizadas para los usuarios."
      skills={[
        "React",
        "HTML",
        "CSS",
        "React Native",
        "TypeScript",
        "JavaScript",
        "HTML",
        "CSS",
        "Redux",
        "Git",
        "GitHub",
      ]}
      url="https://palcarehealth.com"
    />
    {
      /* } <ExperienceComponent
      fechas="2023"
      role="Developer & designer · Caula&Dodero"
      description="As the front-end developer, I developed and tested a website for architects. I also contributed to the design, focusing on their unique needs and aesthetics, while collaborating closely with the client and UX-UI designer."
      skills={["React", "HTML", "CSS"]}
      url="https://estomba-feel.vercel.app"
    />
    */
    }
    <ExperienceComponent
      fechas="2024"
      role="Front-End Developer · MiContainer"
      description="Desarrollé una plataforma en línea para ayudar a los clientes a encontrar la baulera ideal. Me enfoqué exclusivamente en la programación y el desarrollo de la lógica de negocio del sitio web."
      skills={["React", "TypeScript", "CSS3", "Redux"]}
      url="https://mi-container-own-repo.vercel.app"
    />
  </div>
</div>
<style>
  .experience {
    width: 100%;
    min-height: 100vh;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    background-color: #171c27;
    color: white;
    position: relative;
    overflow: hidden;
    border-bottom: 2px solid #0077be;
  }
  .experience-content {
    width: 100%;
    height: 100%;
    padding: 0vw 15vw;
    text-align: left;
  }
  .experience-header {
    margin-bottom: 2rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .experience-title {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 0.5rem;
  }
  .experience-subline {
    width: 50px;
    height: 3px;
    background-color: #78a200;
  }
  .big-light {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translate(0%, 0%);
    width: 600px;
    border-radius: 50%;
    background: linear-gradient(45deg, #005999, #0077be);
    opacity: 0.3;
    filter: blur(200px);
    box-shadow:
      0 0 200px 100px #005999,
      0 0 200px 100px #0077be;
    z-index: 0;
    animation: pulse 10s infinite alternate;
  }
</style>
